{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
		"php": ">=7.1.3",
        "dinkara/dinkoapi": "1.*",
        "fideloper/proxy": "~4.0",
        "laravel/framework": "5.7.*",
        "laravel/socialite": "^3.0",
        "laravel/tinker": "~1.0",
        "mpociot/laravel-apidoc-generator": "^2.0",
        "stevebauman/location": "^3.0",
        "jenssegers/agent": "^2.6"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "classmap": [
            "database",
            "app/Transformers",
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Support/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
	        "@php -r \"file_exists('.env') || copy('env.example', '.env');\"",
            "@php artisan package:discover",
            "@php artisan vendor:publish --all",
            "@php artisan key:generate",
	        "@php artisan jwt:generate",
            "@php artisan storage:link",
            "@php artisan make:postman --routePrefix=api",
            "npm install -g aglio",
            "aglio --theme-variables slate -i documentation/documentation.md -o ./public/docs.html"
        ],
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('env.example', '.env');\"",
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover",
	        "@php artisan vendor:publish --all",
            "@php artisan key:generate",
	        "@php artisan jwt:generate",
            "@php artisan storage:link",
            "@php artisan make:postman --routePrefix=api",
            "npm install -g aglio",
            "aglio --theme-variables slate -i documentation/documentation.md -o ./public/docs.html"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
